{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "target": "ES2022",
    "useDefineForClassFields": false
  },
  "exclude": [
    "test-setup.ts**/*.spec.ts",
    "**/*.test.ts",
    "jest.config.ts",
    "**/*.stories.ts",
    "**/*.stories.js"
  ],
  "include": ["**/*.ts", "tailwind.config.js"]
}
