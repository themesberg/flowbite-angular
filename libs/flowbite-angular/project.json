{
  "name": "flowbite-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/flowbite-angular/src",
  "prefix": "flowbite",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/flowbite-angular"],
      "options": {
        "project": "libs/flowbite-angular/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/flowbite-angular/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/flowbite-angular/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/flowbite-angular"],
      "options": {
        "jestConfig": "libs/flowbite-angular/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "github": true,
        "npm": true,
        "changelog": true,
        "branches": [
          "main",
          "release",
          {
            "name": "beta",
            "prerelease": true
          },
          {
            "name": "alpha",
            "prerelease": true
          }
        ],
        "buildTarget": "flowbite-angular:build",
        "outputPath": "{workspaceRoot}/dist/libs/flowbite-angular",
        "tagFormat": "flowbite-angular@v${version}",
        "commitMessage": "chore(flowbite-angular): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/flowbite-angular/.storybook",
        "browserTarget": "flowbite-angular:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/flowbite-angular",
        "configDir": "libs/flowbite-angular/.storybook",
        "browserTarget": "flowbite-angular:build-storybook",
        "compodoc": false,
        "styles": ["apps/docs/src/styles.css"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/flowbite-angular/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build-storybook"],
      "options": {
        "buildTarget": "flowbite-angular:build-storybook",
        "staticFilePath": "dist/storybook/flowbite-angular",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "flowbite-angular:build-storybook:ci"
        }
      }
    }
  }
}
