{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@ng-doc/generated": ["tmp/apps/docs/ng-doc/docs/index.ts"],
      "@ng-doc/generated/*": ["tmp/apps/docs/ng-doc/docs/*"],
      "flowbite-angular": ["libs/flowbite-angular/core/src/index.ts"],
      "flowbite-angular-tools": ["libs/tools/src/index.ts"],
      "flowbite-angular/accordion": ["libs/flowbite-angular/accordion/src/index.ts"],
      "flowbite-angular/alert": ["libs/flowbite-angular/alert/src/index.ts"],
      "flowbite-angular/badge": ["libs/flowbite-angular/badge/src/index.ts"],
      "flowbite-angular/breadcrumb": ["libs/flowbite-angular/breadcrumb/src/index.ts"],
      "flowbite-angular/button": ["libs/flowbite-angular/button/src/index.ts"],
      "flowbite-angular/dropdown": ["libs/flowbite-angular/dropdown/src/index.ts"],
      "flowbite-angular/indicator": ["libs/flowbite-angular/indicator/src/index.ts"],
      "flowbite-angular/modal": ["libs/flowbite-angular/modal/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
